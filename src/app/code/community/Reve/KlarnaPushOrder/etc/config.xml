    <global>
        <events>
            <order_cancel_after>
                <observers>
                    <reve_klarna_model_observer_cancel_order>
                        <type>singleton</type>
                        <class>Reve_KlarnaPushOrder_Model_Observer</class>
                        <method>cancelOrder</method>
                    </reve_klarna_model_observer_cancel_order>
                </observers>
            </order_cancel_after>
        </events>
        <models>
            <klarna>
                <class>Reve_KlarnaPushOrder_Model</class>
            </klarna>
        </models>
        <helpers>
            <klarna>
                <class>Reve_KlarnaPushOrder_Helper</class>
            </klarna>
        </helpers>
    </global>
    <frontend>
        <routers>
            <klarna>
                <use>standard</use>
                <args>
                    <module>Reve_KlarnaPushOrder</module>
                    <frontName>klarna</frontName>
                </args>
            </klarna>
        </routers>
        <translate>
            <modules>
                <Reve_KlarnaPushOrder>
                    <files>
                        <default>Reve_Klarna.csv</default>
                    </files>
                </Reve_KlarnaPushOrder>
            </modules>
        </translate>
    </frontend>
</config>
