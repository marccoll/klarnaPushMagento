<config>
    <modules>
        <Reve_KlarnaPushOrder>
            <version>1.0.0</version>
        </Reve_KlarnaPushOrder>
    </modules>

    <!--<frontend>-->
        <!--<layout>-->
            <!--<updates>-->
                <!--<klarna>-->
                    <!--<file>reve_klarna.xml</file>-->
                <!--</klarna>-->
            <!--</updates>-->
        <!--</layout>-->
